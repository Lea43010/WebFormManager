# Entwicklungsumgebung Konfiguration
NODE_ENV=development

# Server-Konfiguration
PORT=5000
HOST=0.0.0.0
SESSION_SECRET=local_development_secret_key

# Datenbankverbindung
DATABASE_URL=$DATABASE_URL

# Mapbox-Token für Kartendarstellung
VITE_MAPBOX_ACCESS_TOKEN=$MAPBOX_ACCESS_TOKEN

# API-Keys für externe Dienste
BREVO_API_KEY=$BREVO_API_KEY
OPENAI_API_KEY=$OPENAI_API_KEY
DEEPAI_API_KEY=$DEEPAI_API_KEY

# Stripe-Integration
STRIPE_SECRET_KEY=$STRIPE_SECRET_KEY
VITE_STRIPE_PUBLIC_KEY=$VITE_STRIPE_PUBLIC_KEY
STRIPE_WEBHOOK_SECRET=whsec_development

# Logging-Level (debug, info, warn, error)
LOG_LEVEL=debug

# Backup-Konfiguration
ENABLE_BACKUP=true
BACKUP_CRON=0 1 */14 * 0
BACKUP_DIRECTORY=./backup
MAX_BACKUPS=10
BACKUP_RETENTION_DAYS=30

# E-Mail-Konfiguration
EMAIL_FROM=dev-test@baustructura.de
EMAIL_FROM_NAME=BauStructura (DEV)
EMAIL_DEV_MODE=true
EMAIL_DEV_OUTPUT_PATH=./temp/emails

# Sicherheitskonfiguration
BCRYPT_ROUNDS=10
TWO_FACTOR_ENABLED=false
RATE_LIMIT_LOGIN=50
RATE_LIMIT_API=1500
RATE_LIMIT_HEALTH=300